import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        for(int i = 0 ; i < n ; i++)
        {
            for(int k = 0;k < i ;k ++ ){
                System.out.print(" ");
            }
            for(int j = n ; j > i; j--){
                System.out.print("*");
            }
            System.out.println();
        }
    }
}


