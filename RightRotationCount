import java.util.*;
class RightRotationcount

{
public static void main(String args[])
{
Scanner sc = new Scanner(System.in);
int n = sc.nextInt();
int a[] = new int[n];
int i;
for( i = 0;i<n;i++)
{
a[i] = sc.nextInt();
}
int r  = 0;
for(i = 0;i<n;i++)
{
 if(a[i] <a[i+1])
  	continue;
else
{
 r = i+1;
break;
}
}
System.out.println(r);
}
}

